
<h1>Contact Me</h1>
<%=form_tag("/contact/save", role: "form") do%>
<div class="form-group">
	<label for="first_name">First Name</label>
	<%=text_field_tag :first_name, nil, class: "form-control"%>
</div>
<div class="form-group">
	<label for="last_name">First Name</label>
	<%=text_field_tag :last_name, nil, class: "form-control"%>
</div>
<div>
	<label for="email">Email</label>
	Email: <%=text_field_tag :email, nil, class: "form-control"%>
</div>
<div class="form-group">
	<label for="status">Status</label>

	<%=select_tag :status, "<option>Active</option><option>Inactive</option>".html_safe, class: "form-control"%>
</div>
	<br><br>
	<%=submit_tag "Submit", class: "btn btn-success"%>

<%end%>